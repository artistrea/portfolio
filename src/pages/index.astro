---
import { Image } from 'astro:assets';
import LanguageSelector from '../components/LanguageSelector.astro';
import Section from '../components/Section.astro';
import Layout from '../layouts/Layout.astro';
import foto_perfil from "../../public/foto_perfil.jpeg"
import ExperienceCards from '../components/ExperienceCards.astro';

import { experiences } from "../info/experiences"
---

<Layout title="Artur Padovesi">
	<!-- <div class="w-full flex justify-end">
		<LanguageSelector />
	</div> -->
	<Section>
		<div slot="title">
			<h1 class="mb-2 text-4xl font-bold tracking-tight">Artur Padovesi Piratelli</h1>
			<span class="mb-3 text-xl block">Projects Director at <a href="https://struct.unb.br" target="_blank" rel="noopener noreferrer" class="underline">Struct</a></span>
			<p class="max-w-[35ch] text-normal">I'm
				<span class="text-highlight">
					learning
				</span>
				to facilitate, organize, and develop web apps
				<span class="text-highlight">
					with real clients.
				</span>
			</p>
		</div>
		<main slot="content" class="grid lg:grid-cols-3 grid-cols-1 gap-1 mx-auto rounded-md z-0 relative">
			<div class="rounded-t-md lg:rounded-tr-none lg:col-span-2 row-span-2 bg-primary bg-opacity-20">
				<p class="p-5 max-w-prose leading-[1.625] tracking-wide text-normal">
					I'm a
					<span class="text-highlight">
						computer engineering student
					</span>
					at the University of Brasília (UnB) who enjoys problem-solving and is actively preparing for
					<span class="text-highlight">
						programming competitions.
					</span>
					<span class="block h-4"></span>
					As the Projects Director at <a href="https://struct.unb.br" target="_blank" rel="noopener noreferrer" class="underline">Struct - Empresa Junior de Engenharia de Computação</a>, I've been working as a
					<span class="text-highlight">
						web developer
					</span>
					for
					<span class="text-highlight">
						over 2 years,
					</span>
					dedicating approximately 10-30 hours per week.
					<span class="block h-4"></span>
					
					While my role differs from that of a Senior Enterprise, I've gained hands-on
					<span class="text-highlight">
						experience in client interactions, project management and deployment,
					</span>
					both internal and external. I've
					<span class="text-highlight">
						taken the lead
					</span>
					
					on
					<span class="text-highlight">
						changing
					</span>
					our go-to tech
					<span class="text-highlight">
						stack
					</span>
					and template (from Rails to <a href="https://create.t3.gg/" target="_blank" rel="noopener noreferrer" class="underline">T3</a>) and in
					<span class="text-highlight">
						training
					</span>
					initiatives.
				</p>
			</div>
			<div class="lg:row-span-2 flex flex-col row-start-5 lg:row-start-0 -z-10">

				<Image class="hidden lg:block rounded-r-md aspect-square object-cover p-1 bg-secondary bg-opacity-40 max-h-80" src={foto_perfil} alt="A photo of me" />
				
				<div class="flex items-center justify-start h-10 lg:mt-2 lg:ml-1 -mt-1 -z-10">
					<a class="rounded-r-md rounded-b-md cursor-pointer flex items-center justify-center bg-secondary h-full aspect-square outline-background outline focus-visible:outline-orange-400 z-10" target="_blank" rel="noopener noreferrer" href="https://www.linkedin.com/in/artur-padovesi-piratelli-4516a5261/">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
					</a>
					
					<a class="rounded-r-md cursor-pointer flex items-center justify-center bg-secondary h-full aspect-square outline-background outline focus-visible:outline-orange-400" target="_blank" rel="noopener noreferrer" href="https://github.com/artistrea/">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
					</a>
				</div>
			</div>
			<a href="#experience" class="p-5 lg:rounded-l-md rounded-r-md lg:rounded-r-none rounded-b-md bg-secondary mt-3 outline-background outline lg:-mr-3 focus-visible:outline-orange-400">
				<span class="text-opacity-100 text-text block font-bold text-xs uppercase tracking-widest mb-0">Experience</span>
				Learn more about my experience
			</a>
			<a href="#projects" class="p-5 lg:rounded-l-md rounded-r-md lg:rounded-tr-none rounded-b-md bg-secondary -z-10 lg:z-10 row-span-1 -mt-2 lg:mt-3 outline-background outline focus-visible:outline-orange-400">
				<span class="text-opacity-100 text-text block font-bold text-xs uppercase tracking-widest mb-0">Projects</span>
				Check out some of the projects I've worked on.
			</a>
		</main>
	</Section>
	<Section>
		<div slot="title">
			<h2 class="text-lg font-bold uppercase tracking-wider" id="experience">Experience</h2>
		</div>
		<div slot="content">
			<ExperienceCards experiences={experiences} />
		</div>
	</Section>
	<Section>
		<div slot="title">
			<h2 class="text-lg font-bold uppercase tracking-wider" id="projects">Projects</h2>
		</div>
		<div slot="content">
			Website not finished yet
		</div>
	</Section>
</Layout>
	